{
  "id": null,
  "uid": "synced-folder-activity",
  "title": "ðŸ“Š Synced Folder Activity",
  "tags": ["sync", "postgres", "files"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 3,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Total Updates",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT COUNT(*) AS value FROM public.file_events WHERE deleted = false;",
          "format": "table",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false }
      },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Total Deletions",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT COUNT(*) AS value FROM public.file_events WHERE deleted = true;",
          "format": "table",
          "refId": "B"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false }
      },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "Activity Over Time (Updates vs Deletions)",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT date_trunc('hour', created_at) AS time, CASE WHEN deleted THEN 'DELETE' ELSE 'UPDATE' END AS metric, COUNT(*) AS total FROM public.file_events GROUP BY time, metric ORDER BY time;",
          "format": "time_series",
          "refId": "C"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 }
    },
    {
      "type": "barchart",
      "title": "Updates vs Deletions",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT CASE WHEN deleted THEN 'DELETE' ELSE 'UPDATE' END AS action, COUNT(*) AS total FROM public.file_events GROUP BY action ORDER BY total DESC;",
          "format": "table",
          "refId": "D"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "legend": { "displayMode": "hidden" }
      },
      "gridPos": { "x": 0, "y": 10, "w": 6, "h": 6 }
    },
    {
      "type": "table",
      "title": "Top 10 Most Active Files",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT path, COUNT(*) AS changes FROM public.file_events GROUP BY path ORDER BY changes DESC LIMIT 10;",
          "format": "table",
          "refId": "E"
        }
      ],
      "options": { "showHeader": true }
      ,
      "gridPos": { "x": 6, "y": 10, "w": 6, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Daily Activity Trend",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT date_trunc('day', created_at) AS time, COUNT(*) AS total FROM public.file_events GROUP BY time ORDER BY time;",
          "format": "time_series",
          "refId": "F"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Last 24 Hours Activity (Hourly)",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT date_trunc('hour', created_at) AS time, COUNT(*) AS total FROM public.file_events WHERE created_at > NOW() - INTERVAL '24 hours' GROUP BY time ORDER BY time;",
          "format": "time_series",
          "refId": "G"
        }
      ],
      "gridPos": { "x": 0, "y": 22, "w": 12, "h": 6 }
    },
    {
      "type": "table",
      "title": "Action Breakdown by Hour of Day",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT EXTRACT(HOUR FROM created_at) AS hour_of_day, CASE WHEN deleted THEN 'DELETE' ELSE 'UPDATE' END AS action, COUNT(*) AS total FROM public.file_events GROUP BY hour_of_day, action ORDER BY hour_of_day;",
          "format": "table",
          "refId": "H"
        }
      ],
      "options": { "showHeader": true },
      "gridPos": { "x": 0, "y": 28, "w": 12, "h": 6 }
    }
  ]
}
