{
  "id": null,
  "uid": "synced-folder-activity",
  "title": "ðŸ“Š Synced Folder Activity",
  "tags": ["sync", "postgres", "files"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Total Updates",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT COUNT(*) AS total_updates FROM public.files_log WHERE action = 'UPDATE';",
          "format": "table",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false }
      },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Total Deletions",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT COUNT(*) AS total_deletions FROM public.files_log WHERE action = 'DELETE';",
          "format": "table",
          "refId": "B"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false }
      },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "Activity Over Time (by Action)",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT $__time(timestamp), action, COUNT(*) AS total FROM public.files_log GROUP BY 1, action ORDER BY 1;",
          "format": "time_series",
          "refId": "C"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 }
    },
    {
      "type": "barchart",
      "title": "Updates vs Deletions",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT action, COUNT(*) AS total FROM public.files_log GROUP BY action ORDER BY total DESC;",
          "format": "table",
          "refId": "D"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "legend": { "displayMode": "hidden" }
      },
      "gridPos": { "x": 0, "y": 10, "w": 6, "h": 6 }
    },
    {
      "type": "table",
      "title": "Top 10 Most Active Files",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT path, COUNT(*) AS changes FROM public.files_log GROUP BY path ORDER BY changes DESC LIMIT 10;",
          "format": "table",
          "refId": "E"
        }
      ],
      "options": { "showHeader": true },
      "gridPos": { "x": 6, "y": 10, "w": 6, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Daily Activity Trend",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT $__time(date_trunc('day', timestamp)), COUNT(*) AS total FROM public.files_log GROUP BY 1 ORDER BY 1;",
          "format": "time_series",
          "refId": "F"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Last 24 Hours Activity (Hourly)",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT $__time(date_trunc('hour', timestamp)), COUNT(*) AS total FROM public.files_log WHERE timestamp > NOW() - INTERVAL '24 hours' GROUP BY 1 ORDER BY 1;",
          "format": "time_series",
          "refId": "G"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "gridPos": { "x": 0, "y": 22, "w": 12, "h": 6 }
    },
    {
      "type": "table",
      "title": "Action Breakdown by Hour of Day",
      "datasource": "Postgres",
      "targets": [
        {
          "rawSql": "SELECT EXTRACT(HOUR FROM timestamp) AS hour_of_day, action, COUNT(*) AS total FROM public.files_log GROUP BY hour_of_day, action ORDER BY hour_of_day;",
          "format": "table",
          "refId": "H"
        }
      ],
      "options": { "showHeader": true },
      "gridPos": { "x": 0, "y": 28, "w": 12, "h": 6 }
    }
  ]
}
